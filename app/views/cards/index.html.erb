<table>
  <tr>
    <th>Lblcolour</th>
    <th>Title</th>
    <th>Position</th>
    <th>Sprint board</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.lblColour_id %></td>
    <td><%= card.title %></td>
    <td><%= card.position %></td>
    <td><%= card.sprint_board_id %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

